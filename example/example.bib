	pages = {063006},
	number = {6},
	journaltitle = {New Journal of Physics},
	shortjournal = {New J. Phys.},
	author = {Cuevas, J. and Kevrekidis, P. G. and Malomed, B. A. and Dyke, P. and Hulet, R. G.},
