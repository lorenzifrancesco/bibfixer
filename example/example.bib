	file = {APS Snapshot:/home/lorenzi/Zotero/storage/ESDDQD7L/PhysRevA.88.html:text/html;Versione inviata:/home/lorenzi/Zotero/storage/HMR6GAQW/Polo e Ahufinger - 2013 - Soliton-based matter-wave interferometer.pdf:application/pdf},
